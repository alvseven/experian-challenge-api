generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Farmer {
  id String @id @default(uuid())

  document String @unique

  producerName String

  farmName String

  city String

  state String

  totalArea Float

  arableArea Float

  vegetationArea Float

  crops Crop[]

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt

  @@map("farmers")
}

model Crop {
  id String @id @default(uuid())

  name CropType

  farmerId String

  farmer Farmer @relation(fields: [farmerId], references: [id])

  @@map("crops")
}

enum CropType {
  SOYBEAN

  CORN

  COTTON

  COFFEE

  SUGARCANE
}
